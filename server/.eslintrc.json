{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "mocha": true
  },
  "plugins": ["mocha"],
  "extends": ["airbnb-base", "prettier", "plugin:mocha/recommended"],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "no-console": "off",
    "no-underscore-dangle": "off"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "rules": {
        "func-names": "off",
        "no-unused-expressions": "off"
      }
    }
  ]
}
